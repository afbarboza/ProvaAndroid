<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.alex.provaandroid.MainActivity">

    <Button
        android:id="@+id/btn_inicia_jogo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Iniciar Jogo"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:ignore="MissingConstraints">


        <Button
            android:id="@+id/btn_grava_audio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Gravar Ã¡udio" />

        <Button
            android:id="@+id/btn_tira_foto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tirar Foto" />


        <ImageView
            android:id="@+id/foto_usuario"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />


        <Button
            android:id="@+id/parar_gravacao"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Parar Gravar Audio"/>

    </LinearLayout>

</android.support.constraint.ConstraintLayout>
